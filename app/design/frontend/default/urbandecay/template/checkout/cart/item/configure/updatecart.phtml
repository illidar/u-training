        </div>

        <?php if ($this->displayProductStockStatus()): ?>
            <?php if ($_product->isAvailable()): ?>
                <p class="availability-edit-cart"><span><?php echo $this->__('In Stock') ?></span></p>
            <?php else: ?>
                <p class="availability-edit-cart"><span><?php echo $this->__('Out of Stock') ?></span></p>
            <?php endif; ?>
        <?php endif; ?>


        <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>

<script type="text/javascript">
    //<![CDATA[

    var $j = jQuery.noConflict();
    $j(document).ready(function(){

        // Select
        $j('.slct').click(function(){
            /* Заносим выпадающий список в переменную */
            var dropBlock = $j(this).parent().find('.drop');

            /* Делаем проверку: Если выпадающий блок скрыт то делаем его видимым*/
            if( dropBlock.is(':hidden') ) {
                dropBlock.slideDown();

                /* Выделяем ссылку открывающую select */
                $j(this).addClass('active');

                /* Работаем с событием клика по элементам выпадающего списка */
                $j('.drop').find('li').click(function(){

                    /* Заносим в переменную HTML код элемента
                     списка по которому кликнули */
                    var selectResult = $j(this).html();

                    /* Находим наш скрытый инпут и передаем в него
                     значение из переменной selectResult */
                    $j(this).parent().parent().find('input').val(selectResult);

                    /* Передаем значение переменной selectResult в ссылку которая
                     открывает наш выпадающий список и удаляем активность */

                $j('.slct').removeClass('active').html(selectResult);

                    /* Скрываем выпадающий блок */
                    dropBlock.slideUp();

                });

                /* Продолжаем проверку: Если выпадающий блок не скрыт то скрываем его */
            } else {
                $j(this).removeClass('active');
                dropBlock.slideUp();
            }

            /* Предотвращаем обычное поведение ссылки при клике */
            return false;
        });

    });

    //]]>
</script>
