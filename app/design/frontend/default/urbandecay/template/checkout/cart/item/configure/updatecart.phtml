    <div class="add-to-cart">
        <div class="edit-cart-qty">
            <?php if (!$_product->isGrouped()): ?>

                <div class="select-edit-cart">
                    <div id="slct_arrow_edit" class="slct"></div>
                    <a href="#" class="slct">1</a>
                    <ul class="drop">
                        <li class="first_li">1</li>
                        <li>2</li>
                        <li>3</li>
                        <li>4</li>
                        <li>5</li>
                    </ul>

                    <input type="hidden" name="qty" id="select" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" />

