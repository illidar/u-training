/**
 * Product view template
 *
 * @see Mage_Catalog_Block_Product_View
 * @see Mage_Review_Block_Product_View
 */
?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<div class="product-view">
    <h2 class="review_form_title"><?php echo $this->__('Write your review') ?></h2>

    <div class="review-page-product-info">
        <img class="review-page-product-image" src="<?php echo Mage::helper('catalog/image')->init($_product, 'small_image')
            ->constrainOnly(false)
            ->keepAspectRatio(true)
            ->keepFrame(true)
            ->keepTransparency(true)
            ->backgroundColor(array(255,255,255))
            ->resize(100, 100); ?>" alt="">
        <h3 class="review-page-product-name"><?php echo $_product->getName() ?></h3>
    </div>
    <div class="review-block-wrapper">
        <?php echo $this->getChildHtml('product_additional_data') ?>

        <div class="buttons-set-cancel">
            <p class="back-link"><a href="<?php echo $_product->getProductUrl() ?>"><?php echo $this->__('Cancel') ?></a></p>
        </div>
    </div>
</div>
