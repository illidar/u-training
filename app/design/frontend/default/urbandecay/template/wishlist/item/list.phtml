    $columns = $this->getColumns();
?>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
                <div class="fav-list">
                    <div id="item_<?php echo $item->getId();?>" style="width: 215px;">
                        <?php foreach ($columns as $column): ?>
                            <ul>
                                <li><?php $column->setItem($item); echo $column->toHtml($item);?></li>
                            </ul>
                        <?php endforeach; ?>
                    </div>
                </div>
            <?php endforeach ?>
        <?php else: ?>
            <?php echo $this->__('This Wishlist has no Items');?>
        <?php endif; ?>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
    decorateTable('wishlist-table');

